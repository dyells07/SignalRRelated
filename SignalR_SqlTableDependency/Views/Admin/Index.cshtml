@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Admin Jobs</h1>
<h4>Process Loans</h4>

<div class="row">
    <div class="col-6">
        <img src="~/Images/Loans_Illustration.png" width="100%" height="100%" />
    </div>
    <div class="col-6" style="display:grid;">
        <div class="row">
            <div class="col-12">
                <input type="button" id="btnProcessLoans" value="Process Loans" class="btn btn-primary" />
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Log</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr id="trRetrieve">
                            <td>1</td>
                            <td>Retrieve Loans</td>
                            <td>Todo</td>
                        </tr>
                        <tr id="trCalculate">
                            <td>2</td>
                            <td>Calculate Interest for Loans</td>
                            <td>Todo</td>
                        </tr>
                        <tr id="trUpdate">
                            <td>3</td>
                            <td>Update Interest for Loans</td>
                            <td>Todo</td>
                        </tr>
                        <tr id="trLogs">
                            <td>4</td>
                            <td>Write into Logs</td>
                            <td>Todo</td>
                        </tr>
                        <tr id="trEmails">
                            <td>5</td>
                            <td>Send Emails</td>
                            <td>Todo</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/admin.js"></script>

    <script>
        $(function () {
            $('#btnProcessLoans').click(function (e) {
                var url = 'Admin/ProcessLoans';
                $.post(url, function (response) {
                    console.log(response);
                });
            });
        });
    </script>
}

